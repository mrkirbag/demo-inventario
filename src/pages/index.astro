---
import Layout from '../layouts/Layout.astro';
import { verificarToken } from '../utils/auth.js';

const usuario = verificarToken(Astro.request);
if (!usuario) {
    return Astro.redirect('/login');
}

const nombre = usuario.nombre.toUpperCase();
---

<Layout>

    <main>
        <h2 class="bienvenido">Bienvenido, <span id="user">{nombre}!</span></h2>
        <section>
            <h2 class="title">Sistema de Inventario y Facturaci√≥n</h2>
            <h1 class="empresa">DEMO DE PRUEBAS</h1>
            <h3 class="subtitle">RIF. </h3>
            <div class="img-container">
                <img src="/logo.webp" alt="logo de repuestos y accesorios Jimenez">
            </div>
        </section>
    </main>
	
</Layout>

<style>

    main {
        width: 100%;
        min-height: 90vh;
        max-height: 100vh;
        padding: 1.5rem;
        margin: 0;
        background: linear-gradient(to bottom, #f4f4f4 20%, #ffffff 80%);
        overflow: hidden;
    }

    section {
        width: 100%;
        height: 100%;
        padding: 1rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        box-sizing: border-box;
    }

    .bienvenido {
        font-size: 1rem;
        font-weight: 500;
        text-align: left;
        margin-bottom: 0.25rem;
    }

    .bienvenido #user {
        font-size: 1.25rem;
        font-weight: 700;
    }

    .title {
        font-size: 1.25rem;
        text-align: center;
        margin: 0.5rem 0;
        color: #333;
    }

    .empresa {
        font-size: 1.6rem;
        font-weight: 600;
        text-align: center;
        margin: 0.25rem 0;
        line-height: 1.1;
        color: #212121;
    }

    .subtitle {
        font-size: 0.9rem;
        font-style: italic;
        font-weight: 500;
        text-align: center;
        margin-bottom: 0.5rem;
        color: #555;
    }

    .img-container {
        width: 100%;
        display: flex;
        justify-content: center;
        margin-top: 0.5rem;
    }

    img {
        width: 250px;
        margin: 0;
        border: none;
    }

</style>
